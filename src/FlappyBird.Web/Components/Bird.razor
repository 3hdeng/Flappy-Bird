@using FlappyBird.Web.Models

<div class="bird" style="@_birdCss"></div>

@code {

    [Parameter] public BirdModel Model { get; set; }

    string _birdCss => 
        $"width: {Model.Width}px; height: {Model.Height}px; left: {Model.DistanceFromLeft}px; bottom: {Model.DistanceFromGround}px";

    protected override void OnParametersSet()
    {
        Model.PropertyChanged += (o, e) => StateHasChanged();
    }
}